  - no-changed-when
  - risky-shell-pipe
  - command-instead-of-shell
  - command-instead-of-module
  - no-handler
  - latest
  - literal-compare
  # - jinja
  - package-latest
  - ignore-errors
  # - yaml[line-length]
#   - tags:formatting,yaml


# To skip task from verifying
# add comment # noqa: command-instead-of-module
